/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
view{
    font-family:-apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.allitem{
    height:auto;
    padding:20rpx 40rpx;
    justify-content:flex-start;
}
.title{
    line-height:40rpx;
    position: relative;
    width:30%;
    text-align:center;
    margin-bottom: 20px;
}
.title text{
    font-size:32rpx;
    color:#9999CC;
}
.title::after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    top:60rpx;
    height: 1px;
    border-bottom: 1px solid #9999CC;
    color: #D9D9D9;
}