/**templateitem.wxss**/
view{
    font-family:-apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.title{
    margin-bottom: 25rpx;
}
.the_top{
    background-color:#CCCCCC;
    border-bottom: 1px solid #000000;
    text-align: center;
}
.userinfo{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    box-sizing: border-box;
    padding:20rpx 40rpx 20rpx 0;
    margin-top:-80rpx;
}
.userinfo1{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    box-sizing: border-box;
    padding:20rpx 40rpx 0rpx 0;
}
.userinfo-avatar {
    width:40rpx;
    height: 40rpx;
    border-radius: 50%;
}
.top-avatar {
    width:128rpx;
    height: 58rpx;
}
.userinfo-nickname {
    font-size:15px;
    color: #000000;
    margin-top:5px;
}
.item{
    margin-top:50rpx;
    width:100%;
    display:flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap:wrap;
    position: relative;
}
.item label{
    font-size:28rpx;
    position: absolute;
    left: 0;
    top: -30rpx;
    right: 0;
    height: 1px;
    color: #aaa;
}
.item button{
    margin:5px 5px 0 0;
    background-color:#438bfa;
    color:#fff;
    font-size:30rpx;
}
.item .button2{
    margin:5px 5px 0 0;
    background-color:#53b848;
    color:#fdfeff;
    border-radius: 50rpx;
}